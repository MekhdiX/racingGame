{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types", "./@types/**/*.d.ts"]
  },
  "include": ["src", "typings/**/*.d.ts", "./node_modules/@types", "./@types/**/*.d.ts"],
  "exclude": ["**/*.js"]
}
